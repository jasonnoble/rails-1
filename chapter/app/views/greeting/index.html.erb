<h1>Greeting#index</h1>
<p>
	Find me in app/views/greeting/index.html.erb
</p>

<%# Zmienna %>
<%= @message %>

<h1> Proste wyrazenie </h1>
<p>
	Tomaek ma <%= @age %> lat
</p>

<%# FOR %>
<h1>Iteracja</h1>
<% for i in 1..5 %>
<p>
	Naglowek numer <%= i %>
</p>
<% end %>

<h1>Tabelka</h1>
<table>
	<tr>
		<%# FOR dla tablicy %>
		<% @table["headings"].each do |head| %>
		<td><b><%= head %></b></td>
		<% end %>
	</tr>
	<% @table["body"].each do |row| %>
	<tr>
		<% row.each do |col|%>
		<td> <%= col %> </td>
		<% end %>
	</tr>
	<% end %>
</table>
