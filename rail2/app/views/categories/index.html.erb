<h1>Lista kategorii</h1>
<table>
	<tr>
		<th>Nazwa</th>
	</tr>
	<% for category in @all_categories %>
		<tr>
			<td><%= h category.long_name %></td>
			<td><%= link_to 'Edytuj', :action => 'edit', :id => category %>
			<td><%= link_to 'Zniszcz', :confirm => 'Czy aby na pewno', :method => :delete %> </td>
		</tr>
	<% end %>
</table>
<br />
<%= link_to 'Nowa kategoria', new_category_path %> 
